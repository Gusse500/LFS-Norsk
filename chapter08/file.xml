<sect1 id="ch-system-file" role="wrap">
  <?dbhtml filename="file.html"?>

  <sect1info condition="script">
    <productname>file</productname>
    <productnumber>&file-version;</productnumber>
    <address>&file-url;</address>
  </sect1info>

  <title>File-&file-version;</title>

  <indexterm zone="ch-system-file">
    <primary sortas="a-File">File</primary>
  </indexterm>

  <sect2 role="package">
    <title/>

    <para>File pakken inneholder et verktøy for å bestemme typen av en gitt
    fil eller filer.</para>

    <segmentedlist>
      <segtitle>&buildtime;</segtitle>
      <segtitle>&diskspace;</segtitle>

      <seglistitem>
        <seg>&file-fin-sbu;</seg>
        <seg>&file-fin-du;</seg>
      </seglistitem>
    </segmentedlist>

  </sect2>

  <sect2 role="installation">
    <title>Installasjon av File</title>

    <para>Forbered File for kompilering:</para>

<screen><userinput remap="configure">./configure --prefix=/usr</userinput></screen>

    <para>Kompiler pakken:</para>

<screen><userinput remap="make">make</userinput></screen>

    <para>For å teste resultatene, utsted:</para>

<screen><userinput remap="test">make check</userinput></screen>

    <para>Installer pakken:</para>

<screen><userinput remap="install">make install</userinput></screen>

  </sect2>


  <sect2 id="contents-file" role="content">
    <title>Innholdet i File</title>

    <segmentedlist>
      <segtitle>Installerte programmer</segtitle>
      <segtitle>Installert bibliotek</segtitle>

      <seglistitem>
        <seg>file</seg>
        <seg>libmagic.so</seg>
      </seglistitem>
    </segmentedlist>

    <variablelist>
      <bridgehead renderas="sect3">Korte beskrivelser</bridgehead>
      <?dbfo list-presentation="list"?>
      <?dbhtml list-presentation="table"?>

      <varlistentry id="file">
        <term><command>file</command></term>
        <listitem>
          <para>Prøver å klassifisere hver gitt fil; den gjør dette ved å utføre
          flere tester&mdash;filsystemtester, magiske talltester og språk
          tester</para>
          <indexterm zone="ch-system-file file">
            <primary sortas="b-file">file</primary>
          </indexterm>
        </listitem>
      </varlistentry>

      <varlistentry id="libmagic">
        <term><filename class="libraryfile">libmagic</filename></term>
        <listitem>
          <para>Inneholder rutiner for magisk tallgjenkjenning, brukt av
          <command>file</command> programmet</para>
          <indexterm zone="ch-system-file libmagic">
            <primary sortas="c-libmagic">libmagic</primary>
          </indexterm>
        </listitem>
      </varlistentry>

    </variablelist>

  </sect2>

</sect1>
